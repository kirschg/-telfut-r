<Window x:Class="EtelfutarWPF.CustomMessageBoxOk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtelfutarWPF"
        mc:Ignorable="d"
        Title="CustomMessageBoxOk" Height="150" Width="300">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/gfx/backgrounds/etelfutar_ppt_background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="MessageText" Text="Üzenet" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="16" TextWrapping="Wrap" />
        <Button Content="OK" Width="80" Height="20"
                HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,10" Click="Ok_Click" Background="LightGreen"/>
    </Grid>
</Window>
