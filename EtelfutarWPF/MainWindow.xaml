<Window x:Class="EtelfutarWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtelfutarWPF"
        mc:Ignorable="d"
        Title="Ételfutár" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Background="#404040" Height="20" Margin="0,-185,0,0" Foreground="White">
            <MenuItem Header="Bejelentkezés" Name="menu_bejelentkezes" Click="Bejelentkezes_Click"></MenuItem>
            <MenuItem Header="Regisztráció" Click="Regisztracio_Click"></MenuItem>
            <ComboBox Width="110" Name="cbx_tablazatok" Background="#404040" Foreground="White" SelectionChanged="cbx_tablazatok_SelectionChanged" IsEnabled="False"/>
            <MenuItem Header="Kijelentkezés" Name="menu_kijelentkezes" IsEnabled="False" Click="Kijelentkezes_Click"></MenuItem>
            <MenuItem Header="Beállítások" Name="menu_beallitasok" IsEnabled="True" Click="Beallitasok_Click"></MenuItem>
        </Menu>
        <StackPanel Grid.Row="1">
            <DataGrid Background="AntiqueWhite" Name="dgr_adatok"></DataGrid>
            <Button Margin="0,10,0,0" Name="btn_torles" Width="110" Content="Felhasználó Törlése" Click="Torles_Click" IsEnabled="False" Background="Red"></Button>
            <Button Margin="0,10,0,0" Name="btn_modositas" Width="130" Content="Felhasználó Módosítása" Click="Modositas_Click" IsEnabled="False" Background="Gold"></Button>
        </StackPanel>
    </Grid>
</Window>
