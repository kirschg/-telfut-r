<Window x:Class="EtelfutarWPF.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtelfutarWPF"
        mc:Ignorable="d"
        Background="#404040"
        Title="Ételfutár | Felhasználó Módosítása" Height="410" Width="350">
    <StackPanel>
        <Label Content="Felhasználó név:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_felhasznalo_nev" Width="200"></TextBox>
        <Label Content="Teljes név:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_teljes_nev" Width="200"></TextBox>
        <Label Content="Email cím:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_email_cim" Width="200"></TextBox>
        <Label Content="Város Id:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_varos_id" Width="200"></TextBox>
        <Label Content="Lakcím:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_lakcim" Width="200"></TextBox>
        <Label Content="Jelszó:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="pbx_jelszo" Width="200"></PasswordBox>
        <Label Content="Jelszó újra:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="pbx_jelszo_ujra" Width="200"></PasswordBox>
        <Button Click="Modositas_Click" Content="Módosítás" Width="100" Margin="0,10,0,0" Background="#b3001c"></Button>
        <Button Click="Megse_Click" Content="Mégse" Width="100" Margin="0,10,0,0"></Button>
    </StackPanel>
</Window>
