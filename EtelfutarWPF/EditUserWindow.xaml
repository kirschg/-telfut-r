<Window x:Class="EtelfutarWPF.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtelfutarWPF"
        mc:Ignorable="d"
        Title="Ételfutár | Felhasználó Módosítása" Height="410" Width="350">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/gfx/backgrounds/etelfutar_ppt_background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <StackPanel>
        <Label Content="Felhasználó név:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_felhasznalo_nev" Width="200" Background="AntiqueWhite"></TextBox>
        <Label Content="Teljes név:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_teljes_nev" Width="200" Background="AntiqueWhite"></TextBox>
        <Label Content="Email cím:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_email_cim" Width="200" Background="AntiqueWhite"></TextBox>
        <Label Content="Város Id:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_varos_id" Width="200" Background="AntiqueWhite"></TextBox>
        <Label Content="Lakcím:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_lakcim" Width="200" Background="AntiqueWhite"></TextBox>
        <Label Content="Jelszó:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="pbx_jelszo" Width="200" Background="AntiqueWhite"></PasswordBox>
        <Label Content="Jelszó újra:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="pbx_jelszo_ujra" Width="200" Background="AntiqueWhite"></PasswordBox>
        <Button Click="Modositas_Click" Content="Módosítás" Width="100" Margin="0,10,0,0" Background="Gold"></Button>
        <Button Click="Megse_Click" Content="Mégse" Width="100" Margin="0,10,0,0" Background="IndianRed"></Button>
    </StackPanel>
</Window>
