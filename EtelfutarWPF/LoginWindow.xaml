<Window x:Class="EtelfutarWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtelfutarWPF"
        mc:Ignorable="d"
        Background="#404040"
        Title="Ételfutár | Bejelentkezés" Height="300" Width="350">
    <StackPanel>
        <Label Foreground="White" Content="Felhasználó név:" HorizontalAlignment="Center"></Label>
        <TextBox Name="tbx_felhasznalo_nev" Width="200" Text="TakacsL"></TextBox>
        <Label Foreground="White" Content="Jelszó:" HorizontalAlignment="Center"></Label>
        <PasswordBox Name="pbx_jelszo" Width="200" Password="TakacsLaszlo"></PasswordBox>
        <Button Click="Bejelentkezes_Click" Content="Bejelentkezés" Width="100" Margin="0,10,0,0" Background="#b3001e" Foreground="White"></Button>
        <Button Click="Megse_Click" Content="Mégse" Width="100" Margin="0,10,0,0"></Button>
    </StackPanel>
</Window>
